<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="bin_urdf" params="prefix">
    <!-- link list -->
    <link name="${prefix}_base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://external_ros_models/meshes/bin/visual/bin.dae" />
          <scale>0.6 0.6 0.6</scale>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://external_ros_models/meshes/bin/collision/bin_bottom.dae"/>
          <scale>0.6 0.6 0.6</scale>
        </geometry>
      </collision>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://external_ros_models/meshes/bin/collision/bin_sides.dae"/>
          <scale>0.6 0.6 0.6</scale>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="1.0" ixy="0" ixz="0"
                 iyy="1.0" iyz="0"
                 izz="1.0" />
        <mass value="100" />
      </inertial>
    </link>
    <link name="${prefix}_drop_point">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="1.0" ixy="0" ixz="0"
                 iyy="1.0" iyz="0"
                 izz="1.0" />
        <mass value="1.0" />
      </inertial>
    </link>
    <!-- joint list -->
    <joint name="${prefix}_joint_1" type="fixed">
      <origin xyz="0 0 1.0" rpy="0 0 0" />
      <parent link="${prefix}_base_link" />
      <child link="${prefix}_drop_point" />
    </joint>
  </xacro:macro>
</robot>
