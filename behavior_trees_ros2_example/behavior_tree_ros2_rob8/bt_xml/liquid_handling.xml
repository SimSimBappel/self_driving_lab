<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="Add">
    <Sequence>
      <Fallback>
        <AlwaysSuccess/>
      </Fallback>
      <SubTree ID="get_reagent"/>
      <SubTree ID="pour_reagent"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="Separate">
    <Sequence>
      <AlwaysSuccess/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="Transfer">
    <Sequence>
      <AlwaysSuccess/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="get_reagent">
    <Sequence>
      <Fallback>
        <AlwaysSuccess/>
        <SubTree ID="move_base"/>
      </Fallback>
      <SubTree ID="visual_grasp"
               id="2"
               lookout_pose_msg="{location_result}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="pour_reagent">
    <Sequence>
      <Fallback>
        <AlwaysSuccess/>
      </Fallback>
      <SubTree ID="visual_pour"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <SubTree ID="visual_grasp"
             editable="true">
      <input_port name="id"/>
      <input_port name="lookout_pose_msg"/>
    </SubTree>
  </TreeNodesModel>

</root>
